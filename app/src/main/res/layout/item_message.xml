<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        tools:background="@color/black"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_reponse"
            android:layout_width="match_parent"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_reponse"
                android:layout_width="wrap_content"
                android:maxWidth="@dimen/dp_300"
                android:background="#FFFFFF"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp_19"
                android:paddingTop="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_28"
                android:paddingBottom="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_11"
                android:textColor="#000000"
                android:textSize="@dimen/dp_15"
                app:layout_constraintStart_toEndOf="@id/iv_title"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Hello" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_title"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:layout_marginStart="@dimen/dp_15"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_title"
                app:layout_constraintBottom_toBottomOf="@id/tv_reponse"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:layout_marginStart="@dimen/dp_15"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_more"
                android:layout_marginTop="@dimen/dp_10"
                app:layout_constraintTop_toBottomOf="@id/tv_reponse"
                app:layout_constraintStart_toStartOf="@id/tv_reponse" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/dp_281"
            android:paddingStart="@dimen/dp_20"
            android:paddingTop="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_31"
            android:paddingBottom="@dimen/dp_18"
            android:background="#E6FEDA"
            android:textColor="#000000"
            android:textSize="@dimen/dp_15"
            tools:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/dp_15"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Hello" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>